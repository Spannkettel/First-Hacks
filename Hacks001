#include <iostream>

using namespace std;

int getInteger()
{
    // asks user for an integer each time
    cout << "Enter an integer plz: ";
    int a = 0;
    cin >> a;
    return a;
}


int addNums(int x, int y)
{
    return x + y;
}

int main()
{
    // into to program at top of screen
    cout << " " << endl;
    cout << "Magic Addinator Program" << endl;
    cout << " " << endl;

doItAgain:      // this is a statement label for a goto

    int x = getInteger();
    int y = getInteger();
    int r = addNums(x, y);

    cout << " " << endl;
    cout << x << " and " << y << " add up to: " << r << endl;
    cout << " " << endl;

    // ask if you want to perform another addition
    int doIt = 0;
    cout << "Do another one? (Zero for no, One for yes) :";
    cin >> doIt;
    if (doIt == 1)
        goto doItAgain;

    // leaves the program
    cout << " " << endl;
    cout << "Thanks for playing, meat-bag." << endl;

    return 0;
}
